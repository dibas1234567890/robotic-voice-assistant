{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "FastAPI: Uvicorn",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "server:app",
        "--reload",
        "--host", "127.0.0.1",
        "--port", "8000"
      ],
      "env": {
        "DEBUG": "true"
      },
      "console": "integratedTerminal"
    }
  ]
}
